// Change button link and text
function changeButton() {
    var el = document.querySelector('.Reminder__course-setup-body .btn.btn-primary.wizard_popup_link.auto_open');
    if (typeof (el) != 'undefined' && el !== null) {
        el.setAttribute('href', 'https://obl.ku.dk/absalon');
        el.innerHTML = 'Find inspiration here';
        el.classList.add('fadeIn');
    }
}

// Get lang and add link to left menu (da/eng)
function addLink() {
    var lang = document.getElementsByTagName("html")[0].getAttribute("lang");
    var link = (lang == 'da') ? 'https://kunet.ku.dk/fakultet-og-institut/koebenhavns-universitetsbibliotek/biblioteksadgang/Sider/default.aspx' : 'https://kunet.ku.dk/faculty-and-department/copenhagen-university-library/library-access/Pages/default.aspx';
    var text = (lang == 'da') ? 'Bibliotek' : 'Library';
    var li = document.createElement('li');
    li.classList.add('menu-item', 'ic-app-header__menu-list-item');
    li.innerHTML = "<a class='ic-app-header__menu-list-link' target='_blank' href='" + link + "'><div class='menu-item__text'>" + text + "</div></a>";
    var ul = document.getElementById("menu");
    if (typeof (ul) != 'undefined' && ul !== null) {
        ul.appendChild(li);
    }
}

